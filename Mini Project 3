<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Toggle Text (ON / OFF)</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: Arial, Helvetica, sans-serif;
    }
    body {
      min-height: 100vh;
      display: flex;            
      justify-content: center;    
      align-items: center;
      background-color: #f2f4f8;  
    }
    .container {
      display: flex;             
      flex-direction: column;     
      align-items: center;
      gap: 20px;                  
      background-color: #ffffff;
      padding: 40px 60px;
      border-radius: 10px;
    }
    h1 {
      display: block;             
      text-align: center;         
      text-transform: uppercase;  
      font-size: 48px;            
      font-weight: 700;           
      color: #333333;
    }
    button {
      display: inline-block;     
      padding: 12px 30px;
      font-size: 18px;
      font-weight: 600;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      background-color: #4a6cff;
      color: #ffffff;
    }

    button:active {
      transform: scale(0.97);
    }
    @media (max-width: 600px) {
      .container {
        width: 90%;
        padding: 30px 20px;
      }

      h1 {
        font-size: 36px;
      }

      button {
        width: 100%;
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 id="statusText">OFF</h1>
    <button id="toggleBtn">Toggle</button>
  </div>
  <script>
    const statusText = document.getElementById("statusText");
    const toggleBtn = document.getElementById("toggleBtn");
    let isOn = false;
    toggleBtn.addEventListener("click", function () {
      if (isOn) {
        statusText.textContent = "OFF";
        isOn = false;
      } else {
        statusText.textContent = "ON";
        isOn = true;
      }
    });
  </script>

</body>
</html>
